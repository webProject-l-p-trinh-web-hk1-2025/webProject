<?xml version="1.0" encoding="UTF-8"?>

<sitemesh>
    <!-- Admin pages use admin decorator -->
    <mapping path="/admin" decorator="admin.jsp"/>
    <mapping path="/admin/*" decorator="admin.jsp"/>
       <!-- Trang không sử dụng header và footer web -->
    <mapping path="/login" decorator="none.jsp"/>
    <mapping path="/register" decorator="none.jsp"/>
    <mapping path="/resetPassword" decorator="none.jsp"/>

    <!-- exclude phần này vì chưa có template cho login register -->
    <mapping path="/login" exclude="true"/>
    <mapping path="/register" exclude="true"/>
    <mapping path="/resetPassword" exclude="true"/>
    <mapping path="/verify-otp" exclude="true"/>
    <mapping path="/change-password" exclude="true"/>
    
    <!-- Tạm exclude product_list page vì chưa có template -->
    <mapping path="/product_list" exclude="true"/>
    
    <!-- Tạm exclude cart page vì chưa có template -->
    <mapping path="/cart" exclude="true"/>
    
    <!-- All other pages use web decorator -->
    <mapping path="/*" decorator="web.jsp"/>
</sitemesh>